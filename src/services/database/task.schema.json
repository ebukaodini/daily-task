{
  "title": "Tasks Schema",
  "description": "describes the tasks",
  "version": 0,
  "primaryKey": "id",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "timestamp": {
      "type": "string"
    },
    "subtasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task": {
            "type": "string"
          },
          "completed": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "board": {
      "enum": [
        "TASKS",
        "ARCHIVE",
        "BACKLOG"
      ]
    },
    "status": {
      "enum": [
        "Pending",
        "Doing",
        "Paused",
        "Cancelled",
        "Done"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "colorCode": {
            "enum": [
              "7CC979",
              "FFB05A",
              "EF5849",
              "C479DD",
              "F5FCFF",
              "AF7C2F",
              "00C3DE",
              "FF94D3",
              "324662",
              "B3BAC4",
              "43E79C",
              "F5D434"
            ]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "order": {
      "type": "number"
    },
    "history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string"
          },
          "event": {
            "enum": [
              "Pending",
              "Doing",
              "Paused",
              "Cancelled",
              "Done"
            ]
          }
        },
        "required": [
          "timestamp"
        ]
      }
    }
  },
  "required": [
    "id",
    "timestamp"
  ]
}